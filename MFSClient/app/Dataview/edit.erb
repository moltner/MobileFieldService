<div data-role="page">

  <div data-role="header" data-position="inline">
    <h1>Edit <%= @dataview.name %></h1>
    <a href="<%= url_for :action => :show, :id => @dataview.object %>" class="ui-btn-left" data-icon="back" data-direction="reverse">
      Cancel
    </a>
    <a href="<%= url_for :action => :delete, :id => @dataview.object %>" class="ui-btn-right" data-icon="delete" data-direction="reverse">
      Delete
    </a>
  </div>

  <div data-role="content">
    <form method="POST" action="<%= url_for :action => :update %>">
      <input type="hidden" name="id" value="<%= @dataview.object %>"/>
      
          <div data-role="fieldcontain">
            <label for="dataview[name]" class="fieldLabel">Name</label>
            <input type="text" id="dataview[name]" name="dataview[name]" value="<%= @dataview.name %>" <%= placeholder( "Name" ) %> />
          </div>
      
          <div data-role="fieldcontain">
            <label for="dataview[age]" class="fieldLabel">Age</label>
            <input type="text" id="dataview[age]" name="dataview[age]" value="<%= @dataview.age %>" <%= placeholder( "Age" ) %> />
          </div>
      
      <input type="submit" value="Update"/>
    </form>
  </div>

</div>
