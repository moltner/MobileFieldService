<div data-role="page">

  <div data-role="header" data-position="inline">
    <h1>New <%= @dataview.title %></h1>
    <a href="<%= url_for :action => :index %>" class="ui-btn-left" data-icon="back" data-direction="reverse">
      Cancel
    </a>
  </div>

  <div data-role="content">
    <form method="POST" action="<%= url_for :action => :create %>">
      <input type="hidden" name="id" value="<%= @dataview.object %>"/>

      
          <div data-role="fieldcontain">
            <label for="dataview[name]" class="fieldLabel">Name</label>
            <input type="text" id="dataview[name]" name="dataview[name]" <%= placeholder("Name") %> />
          </div>
      
          <div data-role="fieldcontain">
            <label for="dataview[age]" class="fieldLabel">Age</label>
            <input type="text" id="dataview[age]" name="dataview[age]" <%= placeholder("Age") %> />
          </div>
      

      <input type="submit" value="Create"/>
    </form>
  </div>

</div>
