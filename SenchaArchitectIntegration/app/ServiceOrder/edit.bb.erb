<div data-role="page">

  <div data-role="header" data-position="inline">
    <%= link_to "Back", :action => :show, :id => @serviceorder.object %>
    <h1>Edit <%= @serviceorder.order_id%></h1>
    <%= link_to "Delete", :action => :delete, :id => @serviceorder.object %>
  </div>

  <div data-role="content">
    <form method="POST" action="<%= url_for :action => :update %>">
      <input type="hidden" name="id" value="<%= @serviceorder.object %>"/>
      <table>
          
          <tr>
              <td class="itemLabel">Order: </td>
              <td class="itemValue"><input type="text" name="serviceorder[order_id]" value="<%= @serviceorder.order_id %>"/></td>
          </tr>
          
          <tr>
              <td class="itemLabel">Short text: </td>
              <td class="itemValue"><input type="text" name="serviceorder[short_text]" value="<%= @serviceorder.short_text %>"/></td>
          </tr>
          
      </table>
      <input type="submit" value="Update"/>
    </form>
  </div>

</div>
