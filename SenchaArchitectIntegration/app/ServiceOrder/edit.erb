<div data-role="page">

  <div data-role="header" data-position="inline">
    <h1>Edit <%= @serviceorder.order_id %></h1>
    <a href="<%= url_for :action => :show, :id => @serviceorder.object %>" class="ui-btn-left" data-icon="back" data-direction="reverse">
      Cancel
    </a>
    <a href="<%= url_for :action => :delete, :id => @serviceorder.object %>" class="ui-btn-right" data-icon="delete" data-direction="reverse">
      Delete
    </a>
  </div>

  <div data-role="content">
    <form method="POST" action="<%= url_for :action => :update %>">
      <input type="hidden" name="id" value="<%= @serviceorder.object %>"/>
      
          <div data-role="fieldcontain">
            <label for="serviceorder[order_id]" class="fieldLabel">Order</label>
            <input type="text" id="serviceorder[order_id]" name="serviceorder[order_id]" value="<%= @serviceorder.order_id %>" <%= placeholder( "Order" ) %> />
          </div>
      
          <div data-role="fieldcontain">
            <label for="serviceorder[short_text]" class="fieldLabel">Short text</label>
            <input type="text" id="serviceorder[short_text]" name="serviceorder[short_text]" value="<%= @serviceorder.short_text %>" <%= placeholder( "Short text" ) %> />
          </div>
      
      <input type="submit" value="Update"/>
    </form>
  </div>

</div>
