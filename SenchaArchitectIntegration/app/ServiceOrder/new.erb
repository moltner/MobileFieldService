<div data-role="page">

  <div data-role="header" data-position="inline">
    <h1>New <%= @serviceorder.title %></h1>
    <a href="<%= url_for :action => :index %>" class="ui-btn-left" data-icon="back" data-direction="reverse">
      Cancel
    </a>
  </div>

  <div data-role="content">
    <form method="POST" action="<%= url_for :action => :create %>">
      <input type="hidden" name="id" value="<%= @serviceorder.object %>"/>

      
          <div data-role="fieldcontain">
            <label for="serviceorder[order_id]" class="fieldLabel">Order</label>
            <input type="text" id="serviceorder[order_id]" name="serviceorder[order_id]" <%= placeholder("Order") %> />
          </div>
      
          <div data-role="fieldcontain">
            <label for="serviceorder[short_text]" class="fieldLabel">Short text</label>
            <input type="text" id="serviceorder[short_text]" name="serviceorder[short_text]" <%= placeholder("Short text") %> />
          </div>
      

      <input type="submit" value="Create"/>
    </form>
  </div>

</div>
